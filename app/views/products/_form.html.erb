
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1><%= form_title %></h1>
      <%= form_for @products do |f| %>
        <div class="form-group">
          <%=f.text_field :name, class:"form-control form-control-lg", placeholder:"Nombre del Producto" %>
        </div>
        <div class="form-group">
          <%=f.text_field :price, class:"form-control form-control-lg",placeholder:"Precio del Producto" %>
        </div>
        <div class="field">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
            <div>
              <%= b.check_box %>
              <%= b.label %>
            </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= submit_tag( form_title, class:"btn btn-primary btn-lg btn-block") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
